    "husky": "^5.1.1",
    "lint": "eslint ./",
    "lint-staged": "^10.5.4",
    "lint:fix": "eslint ./ --fix",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "snowpack": "^3.0.1"
  },
  "dependencies": {
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  },
  "lint-staged": {
